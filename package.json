{
  "name": "cerberus-email",
  "description": "A few simple, but solid patterns for responsive HTML email templates and newsletters. Even in Outlook and Gmail.",
  "version": "3.3.0",
  "keywords": [
    "responsive-email",
    "html-email",
    "newsletter",
    "email",
    "email-boilerplate",
    "email-template",
    "hybrid-email",
    "cerberus"
  ],
  "homepage": "http://tedgoas.github.io/Cerberus/",
  "author": "Ted Goas (https://twitter.com/TedGoas)",
  "contributors": [
    "GitHub Contributors: https://github.com/TedGoas/Cerberus/graphs/contributors"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TedGoas/Cerberus.git"
  },
  "bugs": {
    "url": "https://github.com/TedGoas/Cerberus/issues"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-script-os",
    "start:win32": "browser-sync start --server --files '**/*.css, **/*.html, **/*.js' --directory --port 7777 --browser \"C:\\Program Files\\Firefox Developer Edition\\firefox.exe\"",
    "//": "Hello! If you are having trouble running this command. Try changing Firefox Developer Edition to FirefoxDeveloperEdition",
    "start:darwin:linux": "browser-sync start --server --files '**/*.css, **/*.html, **/*.js' --directory --port 7777 --browser 'Firefox Developer Edition'"
  },
